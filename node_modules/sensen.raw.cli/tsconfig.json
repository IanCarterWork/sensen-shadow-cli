{
    "compilerOptions": {
        "lib": [
            "ES5", "ES6", "ES7", "ES2015", "ES2016", "ES2017", "ES2018", "ESNext"
        ],
        "noImplicitAny": false,
        "allowJs": true,
        "moduleResolution":"Node",
        "outDir": "./libs",
        "rootDir": "./core",
        "removeComments": false,
        "target": "ES2017",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "strict": true
    },

	"include": [
		"core", "./core/core.d.ts",
	],
    
}